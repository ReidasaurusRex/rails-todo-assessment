<h1>Todo Lists</h1>
<ul>
  <% @todolists.each do |list| %>
  <li>
    <p><%= link_to "#{list.name}", todolist_path(id: list.id) %></p>
    <p><%= link_to "Edit", edit_todolist_path(id: list.id) %></p>
    <p><%= button_to "Delete", todolist_path(id: list.id), method: :delete %></p>
  </li>
  <% end %>
</ul>

<%= link_to "New Todo List", new_todolist_path %>